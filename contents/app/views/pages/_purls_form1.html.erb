<!--
  @brief
  simple PURLの入力フォーム
-->
<%= form_for @newpurl, :html => {:class => "form-inline", target: "result_panel"}, :url => {:action => :purl_commit} do |f| %>
  <div class="input-group">
    <span class="input-group-text">Path: </span>
    <%= f.text_field :path, class: "form-control", id: "#{operate_name}_purls_path", maxlength: 4000 %>
  </div>
  <br>
  <div class="input-group">
    <span class="input-group-text">Target URL: </span>
    <%= f.text_field :target, class: "form-control", id: "#{operate_name}_purls_target", maxlength: 4000 %>
  </div>
  <br>
  <div class="input-group">
    <span class="input-group-text">Maintainers IDs(one per line): </span><br>
    <%= text_area "newpurl_maintainer_ids", "", class: "form-control", id: "#{operate_name}_newpurl_maintainer_ids", maxlength: 4000, cols: 400 %>
  </div>
  <br>
  <br>
  <%= submit_tag 'Submit' , class: 'btn btn-primary btn-block', name: "#{operate_name}_purls_submit" %>
<% end %>
